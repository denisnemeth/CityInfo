<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: lightblue;">
         <children>
            <Label fx:id="label_cityInfo" layoutX="170.0" layoutY="50.0" text="Project CityInfo">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font></Label>
            <ComboBox fx:id="combo_country" onAction="#showCountries" onShowing="#selectCountries" layoutX="20.0" layoutY="120.0" prefHeight="30.0" prefWidth="220.0" />
            <Label fx:id="label_country" layoutX="100.0" layoutY="95.0" text="Country" />
            <ComboBox fx:id="combo_city" onAction="#showCities" disable="true" layoutX="260.0" layoutY="120.0" prefHeight="30.0" prefWidth="220.0" />
            <Label fx:id="label_city" layoutX="355.0" layoutY="95.0" text="City" />
            <Button fx:id="button_1" onAction="#showData" disable="true" layoutX="380.0" layoutY="350.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="105.0" text="Show data" />
            <Pane fx:id="pane_details" layoutX="20.0" layoutY="170.0" prefHeight="210.0" prefWidth="340.0">
               <children>
                  <Label fx:id="label_cityName" text="City: " layoutX="15.0" layoutY="10.0" prefHeight="30.0" prefWidth="105.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_countryName" text="Country: " layoutX="15.0" layoutY="50.0" prefHeight="30.0" prefWidth="105.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_population" text="Population: " layoutX="15.0" layoutY="90.0" prefHeight="30.0" prefWidth="105.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_code2" text="Code2: " layoutX="15.0" layoutY="130.0" prefHeight="30.0" prefWidth="105.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_code3" text="Code3: " layoutX="15.0" layoutY="170.0" prefHeight="30.0" prefWidth="105.0" style="-fx-background-color: lightgreen;" />
               </children></Pane>
         </children></Pane>
   </children>
</GridPane>
