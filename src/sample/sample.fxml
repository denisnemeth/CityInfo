<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="370.0" prefWidth="500.0" style="-fx-background-color: lightblue;">
         <children>
            <Label fx:id="label_cityInfo" layoutX="170.0" layoutY="20.0" text="Project CityInfo">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font></Label>
            <ComboBox fx:id="combo_country" layoutX="20.0" layoutY="90.0" onAction="#showCountries" onShowing="#selectCountries" prefHeight="30.0" prefWidth="220.0" />
            <Label fx:id="label_country" layoutX="100.0" layoutY="65.0" text="Country" />
            <ComboBox fx:id="combo_city" disable="true" layoutX="260.0" layoutY="90.0" onAction="#showCities" prefHeight="30.0" prefWidth="220.0" />
            <Label fx:id="label_city" layoutX="355.0" layoutY="65.0" text="City" />
            <Button fx:id="button_1" disable="true" layoutX="380.0" layoutY="280.0" mnemonicParsing="false" onAction="#showData" prefHeight="30.0" prefWidth="105.0" text="Show data" />
            <Button fx:id="button_2" disable="true" layoutX="380.0" layoutY="320.0" mnemonicParsing="false" onAction="#showDetail" prefHeight="30.0" prefWidth="105.0" text="More info" />
            <Pane fx:id="pane_details" layoutX="20.0" layoutY="140.0" prefHeight="210.0" prefWidth="340.0">
               <children>
                  <Label fx:id="label_cityName" visible="false" layoutX="10.0" layoutY="10.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_countryName" visible="false" layoutX="10.0" layoutY="50.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_population" visible="false" layoutX="10.0" layoutY="90.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_code2" visible="false" layoutX="10.0" layoutY="130.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_code3" visible="false" layoutX="10.0" layoutY="170.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_temp" visible="false" layoutX="175.0" layoutY="10.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_humidity" visible="false" layoutX="175.0" layoutY="50.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_lon" visible="false" layoutX="175.0" layoutY="90.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
                  <Label fx:id="label_lat" visible="false" layoutX="175.0" layoutY="130.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: lightgreen;" />
               </children></Pane>
         </children></Pane>
   </children>
</GridPane>
